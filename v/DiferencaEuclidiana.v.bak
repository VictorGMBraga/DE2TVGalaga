module DiferencaEuclidiana(
	input [10:0] VGA_X, VGA_Y,
	input [121*8-1:0] template1, template2, template3, amostra1, amostra2, amostra3,
	output [31:0] distancia
);
	
	reg [31:0] i, soma1 ,soma2, soma3;	
	assign distancia = soma1 + soma2 + soma3;
	
	always@(VGA_X == 227 && VGA_Y == 49)
		soma1 = 0;
		soma2 = 0;
		soma3 = 0;
		
		for (i = 0; i < 121; i = i+1) 
		begin
			soma1 = soma1 + (template1[8*i +: 8] - amostra1[8*i +: 8]) * (template1[8*i +: 8] - amostra1[8*i +: 8]);
			soma2 = soma2 + (template2[8*i +: 8] - amostra2[8*i +: 8]) * (template2[8*i +: 8] - amostra2[8*i +: 8]);
			soma3 = soma3 + (template3[8*i +: 8] - amostra3[8*i +: 8]) * (template3[8*i +: 8] - amostra3[8*i +: 8]);
		end
	end
	
endmodule	
		input 		[31:0] 		distancia7,
		input 		[31:0] 		distancia8,
		input 		[31:0] 		distancia9,
		output reg	[3:0] 	   numero
	);
	
always@(flag_placar)
	begin
		if(distancia0 < distancia1 && distancia0 < distancia2 && distancia0 < distancia3 && distancia0 < distancia4 && distancia0 < distancia5 && distancia0 < distancia6 && distancia0 < distancia7 && distancia0 < distancia8 && distancia0 < distancia9) 
		begin
